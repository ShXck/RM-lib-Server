#ifndef MEMORY_H_MEMORYHANDLER_H_
#define MEMORY_H_MEMORYHANDLER_H_
#include "../data_structs/Map.h"
#include <iostream>

struct Ref_Container {
	int _size;
	void* _value;
	int ref_counter;
	Ref_Container( int size, void* value ) : _size( size ), _value( value ), ref_counter( 0 ) {}

	void add_ref() {
		ref_counter++;
	}

	friend std::ostream& operator << ( std::ostream& strm, const Ref_Container& container ) {
		strm << _value;
		return strm;
	}
};

class MemoryHandler {
public:
	MemoryHandler();
	virtual ~MemoryHandler();
};

#endif /* MEMORY_H_MEMORYHANDLER_H_ */

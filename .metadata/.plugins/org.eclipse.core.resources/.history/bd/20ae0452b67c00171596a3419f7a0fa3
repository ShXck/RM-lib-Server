#ifndef MEMORY_H_REFCONTAINER_H_
#define MEMORY_H_REFCONTAINER_H_
#include <cstddef>
#include <iostream>

namespace mh {

class Ref_Container {
public:
	Ref_Container( void* value, std::size_t size );
	void increment_counter();
	void* value();
	std::size_t size();
	int counter();
	friend std::ostream& operator <<( std::ostream& strm, const Ref_Container& container ) {
		strm << container._value;
		return strm;
	}
	virtual ~Ref_Container();
private:
	int ref_counter;
	std::size_t _size;
	void* _value;
};

} /* namespace mh */

#endif /* MEMORY_H_REFCONTAINER_H_ */
